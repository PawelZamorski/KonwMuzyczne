{% extends 'layout.twig' %}

{% block content %}
    <!-- Offer Category -->
    <section id="about" class="introduction scrollto">
        <div class="row clearfix">
            <div class="col-3">
                <div class="section-heading">
                    <h3>ZAPRASZAMY</h3>
                    <h2 class="section-title uppercase">{{ offerMainByCategoryArr.getCategory }}</h2>
