{% extends 'layout.twig' %}
{% block content %}
    <!-- Offer Details -->
    <section id="about" class="introduction scrollto">
        <div class="row clearfix">
            <div class="col-3">
                <div class="section-heading">
                    <h3 class="uppercase">{{ offerCategory.getCategory }}</h3>
                    <h2 class="section-title">{{ offerCourse.getHeading3 }}</h2>
                    <p>
                        <img src="{{ offerCourse.getImg }}" alt="{{ offerCourse.getCourseName }}"/>
                    </p>
                <!-- Block offer if Gordonki -->
                {% if offerId != 2 %}
                    <!-- Buy Button -->
                    {% if offerCourse.getQuantity > 0 %}
                        <div class="text-center">
                        <a href="/offer/buy/{{ lang }}/{{ offerId }}" class="button button-secondary uppercase">{{ offerBuyArr.getButtonPay }}</a>

<!-- 
<a href="/offer/test-buy/{{ lang }}/{{ offerId }}" class="button button-secondary uppercase">{{ offerBuyArr.getButtonPay }}</a>
-->
                        </div>
                    {% else %}
                        <p style="color: red; font-size: small;">*Brak wolnych miejsc. Prosimy o kontakt z biurem sprzedaży w celu rezerwcji późniejszego terminu</p>
                        <div class="text-center">
                            <a class="button button-secondary uppercase">{{ offerBuyArr.getButtonPay }}</a>
                        </div>
                    {% endif %}
                    <!-- End of Buy Button -->
                {% endif %}
                <!-- Block offer if Gordonki -->
                </div>
            </div>
            <div class="col-2-3 alignToPhoto">
                <!-- Youtube Movie
                <div>
                    <div class="iframe-container">
                        <iframe src="{{ offerCourse.getMovie }}" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                    </div>
                </div>
                End of Youtube Movie -->
                <!-- Short description -->
                {{ offerCourse.getShortDesc | raw }}
                <!-- Common description -->
                {{ offerCommonDesc.getCommonDesc | raw }}
                <!-- Long description -->
                {{ offerCourse.getLongDesc | raw }}
            </div>
        </div>
    </section>
    <!-- End of Offer Details -->
{% endblock %}