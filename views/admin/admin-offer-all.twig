{% extends 'admin/admin-layout.twig' %}

{% block content %}

<div>
    <table class="table table-hover table-bordered">
        <caption style="caption-side: top;">Lista ofert</caption>
        <thead class="thead-light">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Kod kursu</th>
                <th scope="col">Kolejność wyświetlania</th>
                <th scope="col">Usuń</th>                
            </tr>
        </thead>
        <tbody>
        {% for offer in offerArr %}
                <tr>
                    <th scope="row">{{ offer.getId }}</th>
                    <td>{{ offer.getCode }}</td>
                    <td>{{ offer.getSortIndex }} </td>
                    <td><a href="/admin/{{ lang }}/offer/{{ offer.getId }}/delete" class="btn btn-light" role="button" aria-pressed="true" onclick="return confirm('Potwierdź usunięcie danych!')">Usuń</a></td>
                </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
<hr>

{% endblock %}

