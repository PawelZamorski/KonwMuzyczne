{% extends 'layout.twig' %}

{% block content %}
    <!-- Offer Buy -->
    <section class="secondary-color text-center scrollto clearfix ">
        <div class="row clearfix">
            <div class="section-heading">
                <h3>{{ offerBuyArr.getHeading3Buy }}</h3>
                <h2 class="section-title">{{ offerBuyArr.getHeading2Buy }}</h2>
            </div>
            <div class="col">
                <form id="ajax-contact" method="post" action="/offer/buy/payment/{{ lang }}/{{ offerByIdArr.getOfferId }}">
                    <div class="col-2">
                        <div>
                            {{ offerBuyArr.getInfoBuy | raw }}
                            <ul>
                                <li class="text-left">{{ offerBuyArr.getInfoCourse }} {{ offerByIdArr.getCategory }} | {{ offerByIdArr.getName }}</li>
                                <li class="text-left">{{ offerBuyArr.getInfoPrice }}</li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-2">
                        <input type="hidden" name="message" value="Oferta kurs {{ offerByIdArr.getCategory }} | {{ offerByIdArr.getName }} Kwota do zapłaty za pakiet 4 lekcji: 400zł">
                        <input type="hidden" name="lang" value="{{ lang }}">
                        <input type="hidden" name="offerId" value={{ offerByIdArr.getOfferId }}>
                        <div class="field">
                            <input type="text" id="name" name="name" placeholder="{{ contactMainArr.getEmailName }}" required>
                        </div>
                        <div class="field">
                            <input type="email" id="email" name="email" placeholder="{{ contactMainArr.getEmailEmail }}" required>
                        </div>
<!--  TODO: implement error message, keep form-message. Changes must be done in contact.js. 
                    <div id="error-messages">
                        <p class="text-central" style="color: red;"></p>
                    </div>
-->
                        <div class="g-recaptcha" data-sitekey="{{ recaptchaConfig.sitekey }}">
                        </div>
                        <div class="field">
                            <button id="button" class="button" type="submit">{{ offerBuyArr.getButtonConfirm }}</button>
                        </div>
                    </div>
                </form>
                <div id="form-messages">
                    <p></p>
                </div>
                <div>
                    {{ offerBuyArr.getInfoBuyContact | raw }}
                </div>
            </div>
        </div>
    </section>
    <!-- End of Offer Buy -->
    <!-- Footer -->
    <!-- End of Footer -->

{% endblock %}