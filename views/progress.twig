{% set k = 3 %}

<div id="progress" class="secondary-color text-center clearfix " style="margin-bottom: 20px;">
    <div class="row clearfix">
        <div class="section-heading">
            <h3>{{ progressMainArr.getHeading3 }}</h3>
            <h2 class="section-title">{{ progressMainArr.getHeading2 }}</h2>
        </div>
        <div class="pricing-block col-1 wow fadeInUp" data-wow-delay="0.4s">
            <ul class="stats">
                {% for i in range(1, k) %}
                <li data-width="{{ progressStatArr[i].getPercent }}">{{ progressStatArr[i].getShortDesc }}<span>{{ progressStatArr[i].getPpercent }}</span></li>
                {% endfor %}
            </ul>
            <!--Call to Action-->
            <a href="progress/{{ lang }}" class="button" style="margin: 30px 0;">{{ progressMainArr.getButton }}</a>
            <!--End Call to Action-->
        </div>
    </div>
</div>